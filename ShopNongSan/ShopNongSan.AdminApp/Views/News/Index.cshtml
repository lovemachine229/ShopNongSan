@using ShopNongSan.Data.Models
@using ShopNongSan.Service.Tools
@model IEnumerable<ShopNongSan.Data.Collection.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    PagerModel pager = new PagerModel();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

    SortModel sortModel = (SortModel)ViewData["sortModel"];
}

<link rel="stylesheet" href="~/css//all.css" />

<h2>Danh sách tin tức</h2>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <i class="@sortModel.GetColumn("title").SortIcon" arial-hiden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("title").SortExpression">@Html.DisplayNameFor(modelItem => modelItem.Title)</a>
            </th>
            <th>
                Ảnh mô tả
            </th>
            <th>
                <i class="@sortModel.GetColumn("time").SortIcon" arial-hiden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("time").SortExpression">@Html.DisplayNameFor(modelItem => modelItem.Created_At)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="data:image/png;base64,@item.Thumbnail" width="50" height= "50">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_At)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id=item.Id }) |
                @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_pager" model=@pager />